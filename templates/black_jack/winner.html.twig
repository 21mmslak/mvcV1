{% extends "base.html.twig" %}

{% block title %}Game Over{% endblock %}

{% block body %}
<h1>Game Over</h1>

<h2>{{ winner }}</h2>

<h3>Dealer</h3>
<p>Points: {{ dealerPoints }}</p>
<ul>
    {% for card in dealer %}
        <li>{{ card.card|raw }}</li>
    {% endfor %}
</ul>


<h3>Player</h3>
<p>Points: {{ playerPoints }}</p>
<ul>
    {% for card in player %}
        <li>{{ card.card|raw }}</li>
    {% endfor %}
</ul>

<a href="{{ path('game_start') }}">
    <button>Spela igen</button>
</a>
{% endblock %}