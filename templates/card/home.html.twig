    <ul>
        <li><a href="{{ path('card_deck') }}">Show deck</a></li>, 
        <li><a href="{{ path('deck_shuffle') }}">Show shuffeld deck</a></li>,
        <li><a href="{{ path('draw_one_card') }}">Draw one card</a></li>,
        <li><a href="{{ path('draw_n_cards', { num: 1 }) }}">Draw N(1 std) cards</a></li>,
        <li><a href="{{ path('draw_n_cards_x_players', { play: 1, num: 1 }) }}">Deal N(1 std) cards X(1 std) player</a></li>
    </ul>
</div>
{% endblock %}